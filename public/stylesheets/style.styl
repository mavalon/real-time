body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

.hdnpnl
    display:none;
    &.show
        display:block;

.loading
    background: url('/images/ajax-loader.gif');
    width:43px;
    height: 11px;
    display:none;
    margin: 10px 0;

    &.show
        display: block;

textarea
    max-width: 500px;
    height: 100px;
    resize: none;
    width: 100%;

#sentence
    display: none

#game
    &.playing {
        textarea {
            border-color: red;
        }
    }
    .show {
        display: block;
    }
    #race
      border: solid 1px black;
      border-radius: 5px;
      max-width: 500px;

    .bar
        min-height: 20px;
        width: 100%;
        margin: 5px auto;

    .label
        margin: 5px 5px;
    .percentage
        margin: 5px 5px;
        width: 50%;
        height: 20px;
        background-color: #ccc;
        color: #fff;

    #status
        &.counting
            #state
                display:none
            #gameCountdown
                display:block
        #gameCountdown
            display:none;
.btn {
  margin: 10px auto;
  color: #eceded;
  width: 100%;
  height: 33px;
  max-width: 80vw;
  text-align: center;
  font-family: "BrandonTextWeb-Bold", system, -apple-system, ".SFNSDisplay-Regular", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 18px;
  line-height: 2.2;
  text-transform: uppercase;
  white-space: nowrap;
  cursor: pointer;
  border-radius: 3px;
  background-color: #6aade4;
  -webkit-transition: background-color 0.3s cubic-bezier(0.55, 0.085, 0.68, 0.53);
  transition: background-color 0.3s cubic-bezier(0.55, 0.085, 0.68, 0.53);
}

#alert {
    background-color: #f00;
    bottom: -40px;
    position: absolute;
    z-index: 10;
    left: 0;
    width: 100%;
    color: #fff;
    font-weight: bold;
    height: 40px;
    padding: 5px 0;
    line-height 18px;
    text-align: center;
    transition: bottom 2s, opacity 1s;
    opacity: 0;

    &.show {
        bottom: 0;
        opacity: 1;
        display: block;
    }
}

.panel {
    display:none;

    &.show {
        display: block;
    }
}

#status {
    margin: 5px 0;
}